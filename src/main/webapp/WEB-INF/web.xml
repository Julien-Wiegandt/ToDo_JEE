<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.global.servlet.Index</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.global.servlet.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.global.servlet.Register</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Disconnect</servlet-name>
        <servlet-class>com.global.servlet.Disconnect</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>com.global.servlet.Profile</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddTaskList</servlet-name>
        <servlet-class>com.global.servlet.AddTaskList</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteTaskList</servlet-name>
        <servlet-class>com.global.servlet.DeleteTaskList</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>com.global.servlet.DeleteTask</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddTask</servlet-name>
        <servlet-class>com.global.servlet.AddTask</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>com.global.servlet.DeleteAccount</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/js/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>Disconnect</servlet-name>
        <url-pattern>/disconnect</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>AddTaskList</servlet-name>
        <url-pattern>/AddTaskList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteTaskList</servlet-name>
        <url-pattern>/DeleteTaskList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/DeleteTask</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddTask</servlet-name>
        <url-pattern>/AddTask</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/DeleteAccount</url-pattern>
    </servlet-mapping>

</web-app>